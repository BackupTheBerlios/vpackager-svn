PUBLIC SUB Form_Open()

  ME.tlBanner.text = "<h2>" & Global.sMyname & " " & Global.sMyVer & "</h2>"
  ME.Caption = Global.sMyname & " About packaging"

END

PUBLIC SUB btClose_Click()

  ME.Close
  FMain.Show

END

PUBLIC SUB Form_Close()

  FMain.Show
  

END
